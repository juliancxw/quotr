                <div class="box has-text-centered">

                    <form action="/project/upload?id=<%= projectId %>" enctype="multipart/form-data" method="post">
                        <div id="forge-upload" class="file has-name is-boxed is-centered">
                            <label class="file-label">
                              <input class="file-input" type="file" name="fileToUpload">
                              <span class="file-cta">
